<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="118*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LogBox" Margin="10,10,400,43" TextWrapping="Wrap" Grid.RowSpan="2"/>
        <Button x:Name="PushMe" Content="Read Memory" Margin="0,0,12,12" RenderTransformOrigin="3.758,3.614" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="90" Click="PushMe_Click" Grid.Row="1"/>
        <Button x:Name="ClearLog" Content="Clear Log" Margin="0,0,102,12" RenderTransformOrigin="3.758,3.614" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="91" Click="ClearLog_Click" Grid.Row="1"/>
        <StackPanel Margin="0,0,0,43" Grid.RowSpan="2" HorizontalAlignment="Right" Width="395">
            <Label x:Name="SuppliesLabel" Content="Food &amp; Booze: " FontFamily="Courier New"/>
            <Label x:Name="BoozeLabel" Content="Booze: " FontFamily="Courier New"/>
            <Label x:Name="PopulationLabel" Content="Population: " FontFamily="Courier New"/>
        </StackPanel>

    </Grid>
</Window>
